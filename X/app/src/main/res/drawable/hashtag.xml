<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background color -->
    <solid android:color="#000000" />

    <!-- Add padding to top, left, and right, leaving bottom for the border -->
    <padding
        android:left="0dp"
        android:top="0dp"
        android:right="0dp"
        android:bottom="1dp" />

    <!-- Bottom border (stroke) -->
    <stroke
        android:width="1dp"
        android:color="#5A5A5B" />
</shape>
